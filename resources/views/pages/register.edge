<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>
        Twitter Clone
        </title>
        <link rel="preconnect" href="https://fonts.bunny.net" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.0/css/all.min.css" rel="stylesheet">
        <link
        href="https://fonts.bunny.net/css?family=instrument-sans:400,400i,500,500i,600,600i,700,700i"
        rel="stylesheet"
        />

        <script src="https://cdn.tailwindcss.com"></script>

        @vite(['resources/css/register.css', 'resources/js/register.js'])
        @stack('dumper')
    </head>
    <body class="min-h-screen flex items-center justify-center p-4">
            <div class="max-w-md w-full">
                <div class="mb-10">
                    <i class="x-logo fab fa-x-twitter text-3xl"></i>
                </div>
                
                <h1 class="text-3xl font-bold mb-8">Join X today</h1>
                
                <div class="space-y-3 mb-6">
                    <button class="w-full flex items-center justify-center py-2 px-4 rounded-full border border-gray-600 font-medium text-sm hover:bg-gray-900 transition">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                        </svg> &nbsp;                     
                        Sign up with Google
                    </button>
                    
                    <button class="w-full flex items-center justify-center py-2 px-4 rounded-full border border-gray-600 font-medium text-sm hover:bg-gray-900 transition">
                        <i class="fab fa-apple text-lg mr-2"></i>
                        Sign up with Apple
                    </button>
                </div>
                
                <div class="divider mb-6">
                    <span class="divider-text text-gray-500 text-sm">or</span>
                </div>
                
                <form action="/register" method="POST" class="space-y-4">
                    {{ csrfField() }}
                    <button type="button" id="openSignup" class="w-full py-3 rounded-full next-btn text-sm">
                        Create account
                    </button>
                    
                    <p class="text-xs text-gray-500">
                        By signing up, you agree to the <a href="#" class="text-blue-400 hover:underline">Terms of Service</a> and <a href="#" class="text-blue-400 hover:underline">Privacy Policy</a>, including <a href="#" class="text-blue-400 hover:underline">Cookie Use</a>.
                    </p>
                {{-- </form> --}}
                
                <div class="mt-16">
                    <h2 class="text-xl font-bold mb-4">Already have an account?</h2>
                    <button class="w-full py-3 rounded-full signin-btn text-sm">
                        Sign in
                    </button>
                </div>
            </div>
        
            <!-- Multi-step signup modal -->
            <div id="signupModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
                <div class="bg-black rounded-xl p-6 max-w-md w-full mx-4 border border-gray-800 modal-content">
                    <div class="flex justify-between items-center mb-4">
                        <button id="closeModal" class="rounded-full p-2 hover:bg-gray-800 transition">
                            <i class="fas fa-times text-lg"></i>
                        </button>
                        <div class="flex-1 flex justify-center">
                            <i class="x-logo fab fa-x-twitter text-2xl"></i>
                        </div>
                    </div>
                    
                    <!-- Step indicator -->
                    <div class="flex gap-1 mb-8">
                        <div class="step-indicator flex-1 completed" id="step1"></div>
                        <div class="step-indicator flex-1 completed" id="step2"></div>
                        <div class="step-indicator flex-1 active" id="step3"></div>
                        <div class="step-indicator flex-1" id="step4"></div>
                    </div>
                    
                    <!-- Step 1: Basic Info -->
                    <div id="step1-content" class="step-content">
                        <h2 class="text-2xl font-bold mb-6">Create your account</h2>
                        
                        <div class="space-y-4">
                            <div>
                                <input type="text" placeholder="First name" 
                                name="firstname"
                                    class="w-full py-3 px-4 rounded-md input-field text-white placeholder-gray-500">
                            </div>

                            <div>
                                <input type="text" placeholder="Last name" 
                                name="lastname"
                                    class="w-full py-3 px-4 rounded-md input-field text-white placeholder-gray-500">
                            </div>

                            <div>
                                <input type="text" placeholder="Bio" 
                                name="bio"
                                    class="w-full py-3 px-4 rounded-md input-field text-white placeholder-gray-500">
                            </div>

                            <div>
                                <input type="text" placeholder="Location" 
                                name="location"
                                    class="w-full py-3 px-4 rounded-md input-field text-white placeholder-gray-500">
                            </div>

                            
                            <div>
                                <input type="text" placeholder="Email" 
                                name="email"
                                    class="w-full py-3 px-4 rounded-md input-field text-white placeholder-gray-500">
                            </div>
                            
                            <div class="text-xs text-gray-500">
                                <p>By signing up, you agree to the <a href="#" class="text-blue-400 hover:underline">Terms of Service</a> and <a href="#" class="text-blue-400 hover:underline">Privacy Policy</a>, including <a href="#" class="text-blue-400 hover:underline">Cookie Use</a>. X may use your contact information, including your email address and phone number for purposes outlined in our Privacy Policy.</p>
                            </div>
                            
                            <button type="button" class="w-full py-3 rounded-full next-btn text-sm mt-4 next-step">
                                Next
                            </button>
                        </div>
                    </div>
                    
                    <!-- Step 2: Birthday -->
                    <div id="step2-content" class="step-content hidden">
                        <h2 class="text-2xl font-bold mb-6">When's your birthday?</h2>
                        <p class="text-gray-500 mb-6">This won't be shown publicly. Confirm your own age, even if this account is for a business, pet, or something else.</p>
                        
                        <div class="grid grid-cols-3 gap-3 mb-6">
                            <select class="date-select py-3 px-4 rounded-md text-sm">
                                <option>Month</option>
                                <option>January</option>
                                <option>February</option>
                                <option>March</option>
                                <option>April</option>
                                <option>May</option>
                                <option>June</option>
                                <option>July</option>
                                <option>August</option>
                                <option>September</option>
                                <option>October</option>
                                <option>November</option>
                                <option>December</option>
                            </select>
                            
                            <select class="date-select py-3 px-4 rounded-md text-sm">
                                <option>Day</option>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                                <option>7</option>
                                <option>8</option>
                                <option>9</option>
                                <option>10</option>
                                <option>11</option>
                                <option>12</option>
                                <option>13</option>
                                <option>14</option>
                                <option>15</option>
                                <option>16</option>
                                <option>17</option>
                                <option>18</option>
                                <option>19</option>
                                <option>20</option>
                                <option>21</option>
                                <option>22</option>
                                <option>23</option>
                                <option>24</option>
                                <option>25</option>
                                <option>26</option>
                                <option>27</option>
                                <option>28</option>
                                <option>29</option>
                                <option>30</option>
                                <option>31</option>
                            </select>
                            
                            <select class="date-select py-3 px-4 rounded-md text-sm">
                                <option>Year</option>
                                <option>2023</option>
                                <option>2022</option>
                                <option>2021</option>
                                <option>2020</option>
                                <option>2019</option>
                                <option>2018</option>
                                <option>2017</option>
                                <option>2016</option>
                                <option>2015</option>
                                <option>2014</option>
                                <option>2013</option>
                                <option>2012</option>
                                <option>2011</option>
                                <option>2010</option>
                                <option>2009</option>
                                <option>2008</option>
                                <option>2007</option>
                                <option>2006</option>
                                <option>2005</option>
                                <option>2004</option>
                                <option>2003</option>
                                <option>2002</option>
                                <option>2001</option>
                                <option>2000</option>
                                <option>1999</option>
                                <option>1998</option>
                                <option>1997</option>
                                <option>1996</option>
                                <option>1995</option>
                                <option>1994</option>
                                <option>1993</option>
                                <option>1992</option>
                                <option>1991</option>
                                <option>1990</option>
                                <option>1989</option>
                                <option>1988</option>
                                <option>1987</option>
                                <option>1986</option>
                                <option>1985</option>
                                <option>1984</option>
                                <option>1983</option>
                                <option>1982</option>
                                <option>1981</option>
                                <option>1980</option>
                            </select>
                        </div>
                        
                        <button type="button" class="w-full py-3 rounded-full next-btn text-sm next-step">
                            Next
                        </button>
                    </div>
                    
                    <!-- Step 3: Customization -->
                    <div id="step3-content" class="step-content hidden">
                        <h2 class="text-2xl font-bold mb-6">Customize your experience</h2>
                        
                        <div class="space-y-6">
                            <div>
                                <h3 class="text-lg font-bold mb-2">Track where you see X content across the web</h3>
                                <p class="text-gray-500 text-sm">X uses this data to personalize your experience. This web browsing history will never be stored with your name, email, or phone number.</p>
                            </div>
                            
                            <div class="flex items-start">
                                <div class="flex-1">
                                    <h3 class="text-lg font-bold mb-1">Personalized ads</h3>
                                    <p class="text-gray-500 text-sm">You'll always see ads on X based on your X activity. When this setting is enabled, X may further personalize ads from X advertisers, on and off X, by combining your X activity with other online activity and information from our partners.</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer ml-4">
                                    <input type="checkbox" value="" class="sr-only peer" checked>
                                    <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-500"></div>
                                </label>
                            </div>
                            
                            <p class="text-gray-500 text-xs">By signing up, you agree to our <a href="#" class="text-blue-400 hover:underline">Terms</a>, <a href="#" class="text-blue-400 hover:underline">Privacy Policy</a>, and <a href="#" class="text-blue-400 hover:underline">Cookie Use</a>. X may use your contact information, including your email address and phone number for purposes outlined in our Privacy Policy. <a href="#" class="text-blue-400 hover:underline">Learn more</a></p>
                            
                            <button type="button" class="w-full py-3 rounded-full next-btn text-sm next-step">
                                Next
                            </button>
                        </div>
                    </div>
                    
                    <!-- Step 4: Create Account -->
                    <div id="step4-content" class="step-content hidden">
                        <h2 class="text-2xl font-bold mb-6">Create your account</h2>
                        
                        <div class="space-y-4">
                            <div>
                                <input type="text" placeholder="Username" 
                                    name="username"
                                    class="w-full py-3 px-4 rounded-md input-field text-white placeholder-gray-500">
                            </div>
                            
                            <div>
                                <input type="password" placeholder="Password"
                                    name="password" 
                                    class="w-full py-3 px-4 rounded-md input-field text-white placeholder-gray-500">
                            </div>
                            
                            <div class="text-xs text-gray-500 mb-4">
                                <p>By signing up, you agree to the <a href="#" class="text-blue-400 hover:underline">Terms of Service</a> and <a href="#" class="text-blue-400 hover:underline">Privacy Policy</a>, including <a href="#" class="text-blue-400 hover:underline">Cookie Use</a>.</p>
                            </div>
                            
                            <button type="submit" class="w-full py-3 rounded-full next-btn text-sm">
                                Sign up
                            </button>
                        </div>
                    </div>
                </div>
            </form>
            </div>
    </body>
</html>
