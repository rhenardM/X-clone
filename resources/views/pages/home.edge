<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      Twitter Clone
    </title>

    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.0/css/all.min.css" rel="stylesheet">
    <link
      href="https://fonts.bunny.net/css?family=instrument-sans:400,400i,500,500i,600,600i,700,700i"
      rel="stylesheet"
    />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <script src="https://cdn.tailwindcss.com"></script>

    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              sans: [ "Instrument Sans", "sans-serif" ]
            },
            colors: {
              primary: {
                DEFAULT: "#5A45FF",
                lighter: "#a599ff"
              },
              sand: {
                1: "var(--sand-1)",
                2: "var(--sand-2)",
                3: "var(--sand-3)",
                4: "var(--sand-4)",
                5: "var(--sand-5)",
                6: "var(--sand-6)",
                7: "var(--sand-7)",
                8: "var(--sand-8)",
                9: "var(--sand-9)",
                10: "var(--sand-10)",
                11: "var(--sand-11)",
                12: "var(--sand-12)"
              }
            }
          }
        }
      };
    </script>

    <style>
    </style>

    @vite(['resources/css/app.css', 'resources/js/app.js', 'resources/css/login.css'])
    @stack('dumper')
  </head>
  <body class="bg-black text-white">
    <main class="flex justify-center h-screen">
        <!-- Conteneur principal centré -->
        <div class="flex w-full justify-center">
            <!-- Groupe des 3 colonnes jointives -->
            <div class="flex">
                <!-- Barre latérale gauche -->
                <div class="w-64 gh flex-shrink-0 sticky top-0 h-screen overflow-y-auto">
                    @include('pages/partials/sidebar_left')
                </div>
                
                <!-- Colonne centrale -->
                <div class="flex-1 min-w-0">
                    <header class="sticky top-0 z-10 bg-black/80 backdrop-blur-sm">
                        @include('pages/Partials/header')
                    </header>
                    <section class="overflow-y-auto h-[calc(100vh-2.5rem)]">
                        <div class="max-w-2xl mx-auto w-full px-2">
                            @include('pages/layouts/tweet_form')
                            @include('pages/layouts/homePageContent')
                        </div>
                    </section>
                </div>

                <!-- Barre latérale droite -->
                <div class="w-94  flex-shrink-0 sticky top-0 h-screen overflow-y-auto">
                    @include('pages/partials/sidebar_right')
                </div>
            </div>
        </div>

        <!-- Navigation mobile -->
        <div class="md:hidden fixed bottom-0 left-0 right-0 bg-black z-10">
            @include('pages/partials/mobile_nav')
        </div>
    </main>
</body>
</html>
