<!-- Affichage d'un post avec une image -->
<div class="bg-black text-white p-4 shadow-lg border-t border-b border-gray-800 w-full max-w-2xl mx-auto mb-6">
  <div class="flex items-start space-x-4">
    <!-- Profil -->
    <img src="/resources/img/user3.jpg" alt="Avatar" class="w-12 h-12 rounded-full">
    <div class="flex-1">
      <div class="flex justify-between items-center">
        <div>
          <span class="font-bold">Rhenard Munongo</span>
          <span class="text-gray-500"> @Rhenard_Mun · 5m</span>
        </div>
        <button class="text-gray-500 hover:text-white">...</button>
      </div>
      <p class="mt-2">Voici une belle photo que j'ai prise aujourd'hui ! 📸</p>
      <img src="/resources/img/user1.jpg" alt="Post Image" class="mt-3 w-full rounded-lg">
      <!-- Icônes d'interaction -->
      <div class="flex items-center justify-between mt-3 text-gray-500">
        <button class="hover:text-primary flex items-center space-x-1">
          <span class="flex items-center gap-1"><i class="far fa-comment"></i> 12</span>         
        </button>
        <button class="hover:text-primary flex items-center space-x-1">
          <span class="flex items-center gap-1"><i class="fas fa-retweet"></i> 34</span>
        </button>
        <button class="hover:text-primary flex items-center space-x-1">
          <span class="flex items-center gap-1"><i class="far fa-heart"></i> 56</span>         
        </button>
        <button class="hover:text-primary flex items-center space-x-1">
          <span class="flex items-center gap-1"><i class="far fa-chart-bar"></i> 789</span>
        </button>
        <button class="hover:text-primary flex items-center space-x-1">
          <span class="flex items-center gap-1"><i class="far fa-share-square"></i>789</span> 
        </button>
      </div>
    </div>
  </div>
</div>

